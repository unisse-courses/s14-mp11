<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
    <link href="/css/user_style.css" rel="stylesheet" type="text/css">

    <title><%= title %></title>
</head>

<body>
    <div id="header">
        <div class="container" id="brand">
            <img src="/img/brand_icon.png"></img>
            <h1>K-Penguin</h1>
        </div>
        <div class="container" id="navbar">
            <div class="row">
                <div class="col-md-1.5"><a href="/user/<%= currentUser._id %>">Profile</a></div>
                <div class="col-md-1.5"><a href="/transactions">Transactions</a></div>
                <div class="col-md-1.5"><a href="/artists">Artists</a></div>
                <div class="col-md-1.5"><a href="/items">Items</a></div>
                <div class="col-md-1.5"><a href="/about">About</a></div>
                <div class="col-md-6">
                    <form method="post">
                        <div class="form-group"><input required name="search" id="searchBar" type="text" placeholder="Search items..."></input></div>
                        <p><input type="submit" id="searchButton" class="btn btn-default" value="Search"></p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1 id="name"><%= user.name %></h1>
                    <h4 id="username">@<%= user.username %></h4>
                    <hr>
                    <h2>Description</h2>
                        <p id="userDescription"><%= user.description %></p>
                    <% if(user._id.toString().trim() === currentUser._id.toString().trim()){ %>
                        <hr>
                        <p> <button onclick="window.location.href = '/user_edit';" type="submit" class="btn btn-default">Edit Profile</button>
                            <button onclick="window.location.href = '/item_add';" type="submit" class="btn btn-default">Add Item</button>
                            <button onclick="window.location.href = '/login';" type="submit" class="btn btn-default">Logout</button>
                        </p>
                    <% } %>
                </div>
                <div class="col-md-5">
                    <img id="userImage" src="/img/user.jpg"></img>
                </div>
            </div>
            <hr>
            <h2>Items</h2>
            <hr>
            <% if(items.length == 0){ %>
                <h3 class="text-center">No items.</h3>
            <% } else{ %>  
                <% for(var i = 0; i < items.length; i++) {%>
                    <div id="item" class="row">
                        <div class="col-md-3"><img id="itemImage" src="/img/item.png"></img></div>
                        <div class="col-md-9">
                            <h3 id="itemName"><a href="/item/<%= items[i]._id %>"><%= items[i].name %></a></h3>
                            <p id="itemPrice">â‚±<%= items[i].price %></p>
                            <p id="<%= items[i].status %>"><%= items[i].status.toUpperCase() %></p>
                            <p id="itemDescription"><%= items[i].description %></p>
                        </div>
                    </div>
                <% } %>
            <% } %>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js" integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd" crossorigin="anonymous"></script>
</body>
</html>